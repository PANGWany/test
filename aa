<script type="text/javascript">
$(document).ready(function(){
	$("#d2 li").mouseover(function(){
		$(this).addClass("over");
		
	}).mouseout(function(){
		$(this).removeClass("over");
		
		})
	
})

var index = 0;
  function changeTitle(){
	if (index % 2 ==0){
	   document.title="浅杂志-生活总是深入浅出";	
	}else {
	   document.title="愿万物纯粹，一切如《浅》";	
	}
	index ++;
	setTimeout("changeTitle()",1500)
  }
  window.onload=changeTitle;



	$(function(){
		$.fn.snow({ 
			minSize: 5,		
			maxSize: 50, 	
			newOn: 300		
		});
	});



</script>

